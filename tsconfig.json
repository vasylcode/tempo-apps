{
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"src/routes/receipt/$hash/.pdf.tsx",
		"./scripts"
	],
	"compilerOptions": {
		"target": "ES2024",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": ["ES2024", "DOM", "DOM.Iterable"],
		"types": ["bun", "node", "vite/client", "typed-query-selector/strict"],

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": false,
		"noEmit": true,

		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"baseUrl": ".",
		"resolveJsonModule": true,
		"paths": {
			"#*": ["./src/*"],
			"#explore*": ["./src/routes/explore/*"],
			"#components": ["./src/components/*"]
		}
	},
	"exclude": ["**/_/**", "node_modules"]
}
